{
  "name": "Konfirmado Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  // Ports to forward to the host
  "forwardPorts": [
    3000,  // Next.js app
    5432,  // PostgreSQL
    8025,  // Mailhog web UI
    9000,  // MinIO API
    9001   // MinIO console
  ],
  
  // Port labels for clarity
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL"
    },
    "8025": {
      "label": "Mailhog UI",
      "onAutoForward": "openBrowser"
    },
    "9000": {
      "label": "MinIO API"
    },
    "9001": {
      "label": "MinIO Console",
      "onAutoForward": "ignore"
    }
  },
  
  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },
  
  // Commands to run after container is created
  "postCreateCommand": "pnpm install && pnpm prisma generate",
  
  // Commands to run after container starts
  "postStartCommand": "echo 'âœ… Dev container ready! Services: PostgreSQL (5432), Mailhog (8025), MinIO (9001)'",
  
  // Set environment variables
  "remoteEnv": {
    "DATABASE_URL": "postgresql://konfirmado:dev_password@db:5432/konfirmado_dev"
  },
  
  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  
  // Uncomment to connect as root instead
  // "remoteUser": "root"
  "remoteUser": "node"
}
