# ============================================================================
# DEV CONTAINER ENVIRONMENT VARIABLES
# Copy this file to .env.local when using the dev container
# ============================================================================

# ============================================================================
# DATABASE (PostgreSQL in container)
# ============================================================================
DATABASE_URL="postgresql://konfirmado:dev_password@db:5432/konfirmado_dev"

# ============================================================================
# NEXTAUTH (Authentication)
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-only-for-local-development-change-in-production"

# ============================================================================
# ENCRYPTION (for refresh tokens)
# ============================================================================
ENCRYPTION_KEY="dev-encryption-key-32-chars!!"

# ============================================================================
# GOOGLE CALENDAR API
# ============================================================================
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
# Note: Add http://localhost:3000/api/calendar/callback to OAuth redirect URIs

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# WEBHOOKS & CALLBACKS
# ============================================================================
CALLBACK_SECRET="dev-callback-secret-change-in-production"

# ============================================================================
# EMAIL (Mailhog - catches all emails)
# ============================================================================
# Leave RESEND_API_KEY empty - emails will go to Mailhog
# View emails at: http://localhost:8025
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@localhost"

# ============================================================================
# FILE STORAGE (MinIO - S3 compatible)
# ============================================================================
# MinIO replaces Vercel Blob for local development
# Console: http://localhost:9001 (minioadmin/minioadmin)
# API: http://localhost:9000
MINIO_ENDPOINT="minio"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="konfirmado-uploads"
MINIO_USE_SSL="false"

# ============================================================================
# CRON JOBS
# ============================================================================
CRON_SECRET="dev-cron-secret"

# ============================================================================
# WOMPI (use test credentials)
# ============================================================================
# Each tenant configures their own keys in the admin panel
# For testing, use Wompi test credentials
