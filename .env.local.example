# ============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# Copy this file to .env.local for local development
# ============================================================================

# ============================================================================
# DATABASE (PostgreSQL in Docker)
# ============================================================================
DATABASE_URL="postgresql://konfirmado:dev_password@localhost:5432/konfirmado_dev"

# ============================================================================
# NEXTAUTH (Authentication)
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-secret-only-for-local-development-change-in-production"

# ============================================================================
# SUPERADMIN
# ============================================================================
# Comma-separated list of superadmin emails
SUPERADMIN_EMAILS="admin@konfirmado.com,your-email@example.com"

# ============================================================================
# ENCRYPTION (for refresh tokens)
# ============================================================================
ENCRYPTION_KEY="dev-encryption-key-32-chars!!"

# ============================================================================
# GOOGLE CALENDAR API
# ============================================================================
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
# Note: Add http://localhost:3000/api/calendar/callback to OAuth redirect URIs

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# WEBHOOKS & CALLBACKS
# ============================================================================
CALLBACK_SECRET="dev-callback-secret-change-in-production"

# ============================================================================
# EMAIL (Mailhog - catches all emails in dev)
# ============================================================================
# In development, emails automatically go to Mailhog
# View emails at: http://localhost:8025
SMTP_HOST="localhost"
SMTP_PORT="1025"
RESEND_API_KEY=""  # Not used in dev
RESEND_FROM_EMAIL="noreply@localhost"

# ============================================================================
# FILE STORAGE (Local filesystem in dev)
# ============================================================================
# In development, files are saved to public/uploads/
# In production, set BLOB_READ_WRITE_TOKEN to use Vercel Blob
# BLOB_READ_WRITE_TOKEN=""  # Leave empty for local storage

# ============================================================================
# CRON JOBS
# ============================================================================
CRON_SECRET="dev-cron-secret"

# ============================================================================
# WOMPI (use test credentials)
# ============================================================================
# Each tenant configures their own keys in the admin panel
# For testing, use Wompi test credentials
